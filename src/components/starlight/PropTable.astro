---
import { Icon } from '@astrojs/starlight/components'
import Tooltip from '@/components/starlight/tooltip/Tooltip.ts'

interface Row {
  prop: string
  required: boolean
  description?: string
  default?: string
  type: string
}

interface Props {
  rows: Row[]
}

const { rows } = Astro.props

const UUID = crypto.randomUUID()
---

<table class="w-full text-left" width="100%">
  <thead>
    <tr>
      <th>Prop</th>
      <th>Type</th>
      <th>Default</th>
    </tr>
  </thead>
  <tbody>
    {
      rows.map((row) => (
        <tr>
          <td>
            <div class="flex items-center gap-8">
              {row.prop}
              {row.required && <span class="text-red-500">*</span>}
              <Tooltip.Root name="test">
                <Tooltip.Trigger>
                  <Icon name="information" />
                </Tooltip.Trigger>
                <Tooltip.Content>{row.description}</Tooltip.Content>
              </Tooltip.Root>
            </div>
          </td>
          <td>
            <code>{row.type}</code>
          </td>
          <td class="hidden">{row.description}</td>
          <td>{row.default ? <code>{row.default}</code> : 'â€”'}</td>
        </tr>
      ))
    }
  </tbody>
</table>
